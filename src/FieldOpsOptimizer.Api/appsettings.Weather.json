{
  "Weather": {
    "ApiKey": "your-openweathermap-api-key-here",
    "BaseUrl": "https://api.openweathermap.org/data/2.5",
    "TimeoutSeconds": 30,
    "MaxRetryAttempts": 3,
    "CacheDurationMinutes": 15,
    "ForecastCacheDurationMinutes": 60,
    "Units": "metric",
    "Language": "en",
    "EnableAlerts": true,
    "EnableJobRecommendations": true,
    "DefaultAlertRadiusKm": 50,
    "MinWorkTemperature": -10,
    "MaxWorkTemperature": 45,
    "MaxWorkWindSpeed": 50,
    "MaxWorkPrecipitationChance": 80,
    "MinWorkVisibility": 1.0,
    "EnableAutoRefresh": true,
    "AutoRefreshIntervalMinutes": 30,
    "MaxRequestsPerMinute": 60,
    "EnableDetailedLogging": false
  }
}
